    <!---->
    <resultMap id="searchGoods" type="Good">
        <id column="id" property="id"/>
        <result column="food_name" property="foodName"/>
        <result column="food_price" property="foodPrice"/>
        <result column="food_type" property="foodType"/>
        <result column="soleNum" property="soleNum"/>
        <result column="flavor_id" property="flavorId"/>
    </resultMap>
    <insert id="insertOptional"></insert>
    <insert id="insertGood">
        insert into good(id,food_name,food_price,food_type,snake_id,optional_id,flavor_id,soleNum,image)
        values(null,
        #{foodName},
        #{foodPrice},
        #{foodType},
        (
        select snake_id from good_snake where snake_name in
        <foreach collection="snakeNames" item="snakeName" separator="," open="(" close=")">
            #{snakeName}
        </foreach>
        ),
        (
        select optional_id from good_optional where snake_name in
        <foreach collection="optionalNames" item="optionalName" separator="," open="(" close=")">
            #{optionalName}
        </foreach>
        )
    </insert>

    <select id="searchAll" parameterType="Good" resultMap="searchGoods">
        select id,food_name,food_price,food_type,snake_id,optional_id,flavor_id,soleNum,image from good
    </select>




</mapper>